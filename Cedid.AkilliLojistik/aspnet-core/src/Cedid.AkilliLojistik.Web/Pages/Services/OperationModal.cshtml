@page
@using Cedid.AkilliLojistik.Localization
@using Cedid.AkilliLojistik.Web.Pages.Services
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model OperationModalModel
@inject IStringLocalizer<AkilliLojistikResource> L
@{
    Layout = null;
}

<abp-dynamic-form abp-model="Operation" asp-page="/Services/OperationModal">
    <abp-modal scrollable="true">
        <abp-modal-header title="@L["ServiceOperation"]"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)" button-alignment="Default"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>